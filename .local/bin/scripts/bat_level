#!/bin/bash
STAT=$(cat /sys/class/power_supply/BAT0/status)
LVL=$(cat /sys/class/power_supply/BAT0/capacity)

if [ $STAT = Charging ] 
then
    echo  $LVL%
else
    if [ $LVL -lt 10 ]
    then
        echo  $LVL%
    elif [ $LVL -lt 20 ]
    then
        echo  $LVL%
    elif [ $LVL -lt 30 ]
    then
        echo  $LVL%
    elif [ $LVL -lt 40 ]
    then
        echo  $LVL%
    elif [ $LVL -lt 50 ]
    then
        echo  $LVL%
    elif [ $LVL -lt 60 ]
    then
        echo  $LVL%
    elif [ $LVL -lt 70 ]
    then
        echo  $LVL%
    elif [ $LVL -lt 80 ]
    then
        echo  $LVL%
    elif [ $LVL -lt 90 ]
    then
        echo  $LVL%
    elif [ $LVL -lt 100 ]
    then
        echo  $LVL%
    elif [ $LVL -eq 100 ]
    then
      echo  $LVL%
    fi
fi

pkill -SIGRTMIN+1 dwmblocks

